<h3>You're done! If you want to add additional info you can.</h3>
<h3>Otherwise, submit!</h3>


<!-- Validation failure messages -->

<% if @sighting.errors.any? %>
<% @sighting.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <!-- <div class="panel panel-default"> -->
    <div class="panel-body">
      <%= form_tag sightings_url, :method => "post", :class => "form-horizontal" do %>
      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="col-sm-2 control-label">
          Description
        </label>
        <div class="col-sm-10">
          <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @sighting.description %></textarea>
        </div>
      </div>

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="col-sm-2 control-label">
          First name
        </label>
        <div class="col-sm-10">
          <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @sighting.first_name %>">
        </div>
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="col-sm-2 control-label">
          Last name
        </label>
        <div class="col-sm-10">
          <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @sighting.last_name %>">
        </div>
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">
          Email
        </label>
        <div class="col-sm-10">
          <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @sighting.email %>">
        </div>
      </div>

      <!-- Label and input for mobile -->
      <div class="form-group">
        <label for="mobile" class="col-sm-2 control-label">
          Mobile <br> To opt-in for text updates
        </label>
        <div class="col-sm-10">
          <input type="text" id="mobile" name="mobile" placeholder="999-999-9999" class="form-control" value="<%= @sighting.mobile %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Submit" class="btn btn-success">
          or
          <a href="/">Cancel</a>
        </div>
      </div>

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="col-sm-2 control-label">
          Location
        </label>
        <div class="col-sm-10">
          <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @sighting.address%>">
        </div>
      </div>

      <!-- Label and input for search -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="search">
              <input type="checkbox" id="search" name="search" value="1" <%= "checked" if @sighting.search %>>
              Search
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for bait -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="bait">
              <input type="checkbox" id="bait" name="bait" value="1" <%= "checked" if @sighting.bait %>>
              Bait
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for public -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="city_record_ok">
              <input type="checkbox" id="city_record_ok" name="city_record_ok" value="1" <%= "checked" if @sighting.city_record_ok %>>
              Public
            </label>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <!-- </div> -->
  </div>
</div>

<!-- End responsive panel example -->

</body>
</html>


