<h3>Does the address look good? Cool, hit submit!</h3>
<h3>If you want to add more info you can.</h3>
<h4><small>(The report is public record)</small></h4>



<!-- Validation failure messages -->

<% if @sighting.errors.any? %>
<% @sighting.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->



<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <!-- <div class="panel panel-default"> -->
    <div class="panel-body">
    <%= render 'form', :sighting=> @sighting %>
  </div>
</div>




