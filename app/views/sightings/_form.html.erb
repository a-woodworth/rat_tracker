<%= form_for @sighting, :html => { :class => "form-horizontal" } do |f| %>

  <!-- Label and input for location -->
  <div class="form-group">
    <div class="col-sm-10">
    <%= f.text_field :address, :class => "form-control", :placeholder => "Address goes here" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Submit", :class => "btn btn-success" %>
      or
      <%= link_to "Go back", new_sighting_path %>
    </div>
  </div>

  <!-- Label and input for description -->
  <div class="form-group">
    <div class="col-sm-10">
    <%= f.text_area :description, :class => "form-control", :placeholder => "Details: number of rats, if you see a nest, etc." %>
    </div>
  </div>

  <!-- Label and input for first_name -->
  <div class="form-group">
    <div class="col-sm-10">
    <%= f.text_field :first_name, :class => "form-control", :placeholder => "First name" %>
    </div>
  </div>

  <!-- Label and input for last_name -->
  <div class="form-group">
    <div class="col-sm-10">
    <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last name" %>
    </div>
  </div>

  <!-- Label and input for email -->
  <div class="form-group">
    <div class="col-sm-10">
    <%= f.text_field :email, :class => "form-control", :placeholder => "Email address" %>
    </div>
  </div>

  <!-- Label and input for mobile -->
  <div class="form-group">
    <div class="col-sm-10">
    <%= f.text_field :mobile, :class => "form-control", :placeholder => "Phone (888-888-8888)" %>
    </div>
  </div>

  <!-- Label and input for look_for_rats -->
  <div class="form-group">
    <%= f.hidden_field :look_for_rats, :class => "form-control" %>
  </div>

  <!-- Label and input for bait -->
  <div class="form-group">
    <%= f.hidden_field :bait, :class => "form-control" %>
  </div>

  <!-- Label and input for city_record_ok -->
  <div class="form-group">
    <%= f.hidden_field :city_record_ok, :class => "form-control" %>
  </div>
  <% end %>
</div>
