<style type="text/css">
  .footer {position: fixed; left: 0px;bottom: 0px; height: 30px; width: 100%}
</style>

<div style= "text-align: center" >

  <h1 class="text-center"> <strong>See a rat?</strong></h1>
  <h3 class="text-center">Click and report it!</h3>
  <div class col>
    <%= form_tag sightings_path, id: "sighting-form" do %>
    <%= hidden_field_tag :latitude, "", id: "latitude" %>
    <%= hidden_field_tag :longitude, "", id: "longitude" %>
    <%= image_tag "rat.gif", :width => 450, onclick: "getLocation()" %>
    <% end %>
  </div>

  <%#= link_to (image_tag"rat tracker.gif", :width => 500), new_sighting_url%>
  <%=image_tag "skyline_2.gif", :width => "100%"%>
</div>

<script>
  var $latitudeField = $("#latitude");
  var $longitudeField = $("#longitude");

  function getLocation() {
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(addPositionsToForm);
    }
  }

  function addPositionsToForm(position) {
    $latitudeField.val(position.coords.latitude);
    $longitudeField.val(position.coords.longitude);
    $('#sighting-form').submit();
  }
</script>
